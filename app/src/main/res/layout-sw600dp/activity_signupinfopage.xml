<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupInfoPage"
    android:background="@drawable/background_tablet">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/female_button"
        android:layout_width="236dp"
        android:layout_height="127dp"
        android:background="@color/grey"
        android:text="female"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/male_button"
        app:layout_constraintTop_toTopOf="@+id/male_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/male_button"
        android:layout_width="236dp"
        android:layout_height="127dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="164dp"
        android:background="@color/grey"
        android:text="male"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_next_button"
        android:layout_width="266dp"
        android:layout_height="105dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/custom_button"
        android:text="next"
        android:textColor="@color/grey"
        android:textSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signup_kal_goal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_back_button"
        android:layout_width="266dp"
        android:layout_height="105dp"
        android:background="@drawable/custom_button"
        android:text="back"
        android:textColor="@color/grey"
        android:textSize="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/signup_next_button"
        app:layout_constraintEnd_toStartOf="@+id/signup_next_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_kal_goal" />

    <EditText
        android:id="@+id/signup_weight"
        android:layout_width="279dp"
        android:layout_height="90dp"
        android:layout_marginStart="96dp"
        android:backgroundTint="@color/black"
        android:drawableEnd="@drawable/kg_image"
        android:ems="6"
        android:hint="weight"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_height" />

    <EditText
        android:id="@+id/signup_height"
        android:layout_width="279dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/black"
        android:drawableEnd="@drawable/height_image"
        android:ems="6"
        android:hint="height"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toEndOf="@+id/signup_weight"
        app:layout_constraintTop_toBottomOf="@+id/male_button" />

    <EditText
        android:id="@+id/signup_carb_goal"
        android:layout_width="575dp"
        android:layout_height="90dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/black"
        android:drawableEnd="@drawable/grams_image"
        android:ems="10"
        android:hint="Daily carbs goal"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_height" />

    <EditText
        android:id="@+id/signup_prot_goal"
        android:layout_width="575dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        android:drawableEnd="@drawable/grams_image"
        android:ems="10"
        android:hint="Daily proteins goal"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_carb_goal"
        app:layout_constraintTop_toBottomOf="@+id/signup_carb_goal" />

    <EditText
        android:id="@+id/signup_fat_goal"
        android:layout_width="575dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        android:drawableEnd="@drawable/grams_image"
        android:ems="10"
        android:hint="Daily fats goal"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_prot_goal"
        app:layout_constraintTop_toBottomOf="@+id/signup_prot_goal" />

    <EditText
        android:id="@+id/signup_kal_goal"
        android:layout_width="575dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Daily calories goal"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_fat_goal"
        app:layout_constraintTop_toBottomOf="@+id/signup_fat_goal" />

    <TextView
        android:id="@+id/error_signupinfopage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        android:textColor="@color/red"
        android:textSize="34sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_back_button" />


</androidx.constraintlayout.widget.ConstraintLayout>