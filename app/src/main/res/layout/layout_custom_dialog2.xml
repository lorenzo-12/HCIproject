<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_conners">

    <TextView
        android:id="@+id/dialog2_quantity_text"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="QUANTITY:"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog2_quantity_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:ems="5"
        android:hint="QUANTITY"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintStart_toEndOf="@+id/dialog2_set_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog2_set_text"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="SET:"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog2_rep_text"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="REPS: "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog2_set_text" />

    <EditText
        android:id="@+id/dialog2_set_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="5"
        android:hint="SET"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintStart_toEndOf="@+id/dialog2_set_text"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog2_rep_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="5"
        android:hint="REPS"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintStart_toEndOf="@+id/dialog2_rep_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog2_set_input" />

    <LinearLayout
        android:id="@+id/dialog2_section1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- some views -->
        <Button
            android:id="@+id/dialog2_back_btn"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="40dp"/>

        <Button
            android:id="@+id/dialog2_ok_btn"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>